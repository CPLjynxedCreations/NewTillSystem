<Window x:Class="NewTillSystem.TillScren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewTillSystem"
        mc:Ignorable="d"
        Title="TillScren"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Height="1080"
        Width="1920"
        Background="DarkOliveGreen">
    <Grid x:Name="grScreen">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="grSaleScreen"
                                Width="620"/>
            <ColumnDefinition x:Name="grBtnScreen"
                                Width="1300"/>
        </Grid.ColumnDefinitions>

        <!-- DEFINE BUTTON GRID-->
        <Grid x:Name="grBtnScreenColumns"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Grid.Column="1"
              Width="1300"
              Height="1060">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="grBtnScreenCol1"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol2"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol3"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol4"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol5"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol6"
                                  Width="216"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition x:Name="grBtnScreenRow1"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow2"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow3"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow4"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow5"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow6"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow7"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow8"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow9"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow10"
                               Height="106"/>
            </Grid.RowDefinitions>
            <!---->

            <!--DEFINE BUTTON GRID BORDERS-->
            <Border x:Name="brdBtnScreenCol1"
                    Grid.Column="0"
                    Grid.RowSpan="10"
                    BorderBrush="Black"
                    BorderThickness="2,2,2,2"
                    CornerRadius="5,0,0,5"/>
            <Border x:Name="brdBtnScreenCol2"
                    Grid.Column="1"
                    Grid.RowSpan="10"
                    BorderBrush="Black"
                    BorderThickness="1,2,2,2"/>
            <Border x:Name="brdBtnScreenCol3"
                    Grid.Column="2"
                    Grid.RowSpan="10"
                    BorderBrush="Black"
                    BorderThickness="1,2,2,2"/>
            <Border x:Name="brdBtnScreenCol4"
                    Grid.Column="3"
                    Grid.RowSpan="10"
                    BorderBrush="Black"
                    BorderThickness="1,2,2,2"/>
            <Border x:Name="brdBtnScreenCol5"
                    Grid.Column="4"
                    Grid.RowSpan="10"
                    BorderBrush="Black"
                    BorderThickness="1,2,2,2"/>
            <Border x:Name="brdBtnScreenCol6"
                    Grid.Column="5"
                    Grid.RowSpan="10"
                    BorderBrush="Black"
                    BorderThickness="1,2,2,2"
                    CornerRadius="0,5,5,0"/>
            <Border x:Name="brdBtnScreenRow1"
                    Grid.Row="0"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,2,2,1"
                    CornerRadius="5,5,0,0"/>
            <Border x:Name="brdBtnScreenRow2"
                    Grid.Row="1"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,1"/>
            <Border x:Name="brdBtnScreenRow3"
                    Grid.Row="2"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,1"/>
            <Border x:Name="brdBtnScreenRow4"
                    Grid.Row="3"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,1"/>
            <Border x:Name="brdBtnScreenRow5"
                    Grid.Row="4"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,1"/>
            <Border x:Name="brdBtnScreenRow6"
                    Grid.Row="5"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,1"/>
            <Border x:Name="brdBtnScreenRow7"
                    Grid.Row="6"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,1"/>
            <Border x:Name="brdBtnScreenRow8"
                    Grid.Row="7"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,1"/>
            <Border x:Name="brdBtnScreenRow9"
                    Grid.Row="8"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,1"/>
            <Border x:Name="brdBtnScreenRow10"
                    Grid.Row="9"
                    Grid.ColumnSpan="6"
                    BorderBrush="Black"
                    BorderThickness="2,1,2,2"
                    CornerRadius="0,0,5,5"/>
        </Grid>
    </Grid>
</Window>
