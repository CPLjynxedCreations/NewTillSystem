<Window x:Class="NewTillSystem.TillScren"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewTillSystem"
        mc:Ignorable="d"
        Title="TillScren"
        WindowState="Maximized"
        ResizeMode="NoResize"
        Height="1080"
        Width="1920"
        Background="Black">
    <Grid x:Name="grScreen" HorizontalAlignment="Left" VerticalAlignment="Top">
        <Grid.ColumnDefinitions>
            <ColumnDefinition x:Name="grSaleScreen"
                                Width="620"/>
            <ColumnDefinition x:Name="grBtnScreen"
                                Width="1300"/>
        </Grid.ColumnDefinitions>
        <Border x:Name="brdScreen1"
                    Grid.Column="0"
                    BorderBrush="Black"
                    Background="DarkOliveGreen"
                    BorderThickness="5,5,0,5"
                    CornerRadius="10,0,0,10"/>
        <Border x:Name="brdScreen2"
                    Grid.Column="1"
                    BorderBrush="Black"
                    Background="DarkOliveGreen"
                    BorderThickness="0,5,5,5"
                    CornerRadius="0,10,10,0"/>
        <!-- DEFINE SALE GRID-->
        <Grid x:Name="grSaleItemScreen"
              Grid.Column="0"
              VerticalAlignment="Top"
              HorizontalAlignment="Left"
              Width="620"
              Height="742">
        <Border x:Name="brdSaleItemScreen"
                Grid.Column="0"
                BorderBrush="Black"
                Background="Gray"
                BorderThickness="5,5,5,5"
                CornerRadius="10,0,10,10"/>
        </Grid>
        <!-- DEFINE BUTTON GRID-->
        <Grid x:Name="grBtnScreenColumns"
              HorizontalAlignment="Left"
              VerticalAlignment="Top"
              Grid.Column="1"
              Width="1300"
              Height="1060">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="grBtnScreenCol1"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol2"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol3"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol4"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol5"
                                  Width="216"/>
                <ColumnDefinition x:Name="grBtnScreenCol6"
                                  Width="216"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition x:Name="grBtnScreenRow1"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow2"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow3"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow4"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow5"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow6"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow7"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow8"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow9"
                               Height="106"/>
                <RowDefinition x:Name="grBtnScreenRow10"
                               Height="106"/>
            </Grid.RowDefinitions>
            <!---->
        </Grid>
    </Grid>
</Window>
