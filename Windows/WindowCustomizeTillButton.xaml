<Window x:Class="NewTillSystem.Windows.WindowCustomizeTillButton"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NewTillSystem.Windows"
        mc:Ignorable="d"
        Title="WindowCustomizeTillButton"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        Height="740" Width="620">
    <Grid>
        <Rectangle x:Name="rctButtonColorWindow"
                   Fill="DarkSeaGreen"
                   Stroke="Black" StrokeThickness="5"
                   RadiusX="5" RadiusY="5"/>
        <Button x:Name="btnWindowCustomColorClose"
                HorizontalAlignment="Right" VerticalAlignment="Top"
                Width="100" Height="50"
                Margin="0,30,30,0"
                BorderBrush="Black" BorderThickness="3"
                FontSize="22" FontWeight="UltraBlack"
                Content="X"/>
    </Grid>
</Window>
